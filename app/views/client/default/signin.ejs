<% include header %>
<div class="container" id="signin">
    <!--<h2 class="form-signin-heading">用户登录</h2>-->
    <% if (login.errmsg) { %>
    <div class="alert alert-danger" role="alert"><%= login.errmsg %></div>
    <% } %>
    <form class="form-horizontal" method="post" action="/signin">
        <div class="form-group<%= login.error.username ? ' has-error' : '' %>">
            <div class="col-sm-10">
                <input type="text" class="form-control" name="username" placeholder="用户名 / 邮箱" value="<%= login.field.username || '' %>">
            </div>
        </div>
        <div class="form-group<%= login.error.password ? ' has-error' : '' %>">
            <div class="col-sm-10">
                <input type="password" class="form-control" name="password" placeholder="密码">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                <input type="hidden" name="token" value="<%= login.token %>">
                <button type="submit" class="btn btn-primary btn-block pull-left">立即登录</button>
                <a href="/signup" class="button button-rounded button-flat-highlight pull-right"><i class="fa fa-arrow-right"> 注册</i></a>
            </div>
        </div>
    </form>

</div>

<script src="./libs/jquery/jquery.min.js"></script>
<script src="./libs/bootstrap/js/bootstrap.min.js"></script>
<script data-main="./jscript/signin" src="./libs/requirejs/require.js" ></script>
<% include footer %>